{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "sourceRoot": "src",
    "outDir": "dist",
    "removeComments": true,
    "pretty": false
  },
  "typeRoots": [
    "node_module/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
